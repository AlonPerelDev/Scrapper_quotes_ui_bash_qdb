<!DOCTYPE html>
<html>

<head>
  <title>Form Example</title>
  <style>
    /* CSS styles */
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 600px;
      margin: 50px auto;
      background-color: #fff;
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
    }

    form {
      margin-top: 20px;
    }

    label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }

    input[type="text"],
    input[type="number"] {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
      margin-bottom: 10px;
    }

    input[type="submit"] {
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }


    .response-area {
      margin-top: 20px;
      background-color: #f0f0f0;

      padding: 20px 5px;
    }

    #get {
      background-color: #2ecc71;
    }

    #get:hover {
      background-color: #27ae60;
    }

    #post {
      background-color: #3498db;
    }

    #post:hover {
      background-color: #2980b9;
    }

    #put {
      background-color: #9b59b6;
    }

    #put:hover {
      background-color: #8e44ad;
    }

    #patch {
      background-color: #f1c40f;
    }

    #patch:hover {
      background-color: #f39c12;
    }

    #delete {
      background-color: #e74c3c;
    }

    #delete:hover {
      background-color: #c0392b;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="response-area">
      <% if (content.length === undefined) { %>
      <p>
        Rating: <%= content["rating:"] %> </br></br>
        <%- content["quote:"] %>
        </br></br>
        Year: <%= content["year:"] %>
      </p>
      <% } %>
      <% if (content.length!==undefined && content!== "Click stuff...") { %>
          <% for (let index = 0; index < content.length; index++) { %>
            <% const element = content[index]; %>
              <p>
                *************************************
                  </br></br>
                  Rating: <%= element["rating:"] %> 
                  </br></br>
                  <%- element["quote:"] %>
                  </br></br>
                  Year: <%= element["year:"] %>
                  </br></br>
                *************************************
              </p>
              <% } %>
        <% } %>
      <% if (content === "Click stuff...") {%>
        <p>Click stuff...</p>
      <% } %>

        <% console.log("we're in the EJS, here's the content-dump:",content,"content length?",content.length)%>
    </div>
    <form id="myForm" method="post">
      <label for="idInput">Quote ID:</label>
      <input type="text" id="idInput" name="id">

      <label for="secretInput">Random?</label>
      <input type="radio" id="random" name="randomQuote" value="yesPlease">

      <label for="secretInput">How many? (1-10)</label>
      <input type="range" id="amount" name="amountOfQuotes" min="1" max="10" value="1">

      <label for="scoreInput">Score Min:</label>
      <input type="number" id="scoreInput" name="scoreMin" min="0" max="9000" value="0">

      <label for="scoreInput">Score Max:</label>
      <input type="number" id="scoreInput" name="scoreMax" min="500" max="9999"value="9999">

      <label for="submit">Route:</label>
      <input id="get" type="submit" value="GET" formaction="/get-secret">

    </form>
  </div>
</body>

</html>